    function getHours(row) {
        let hours = 0
        let dates = ['Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday', 'Saturday', 'Sunday']
        row['UserStatus'] = ""
        for (let day of dates) {
            let hourBegin = parseInt(row[day + "Begin"].substring(0, 2))
            let hourEnd = parseInt(row[day + "End"].substring(0, 2))
            if (getMinutes(row['MondayEnd']) < getMinutes(row['MondayBegin'])) {
                row['UserStatus'] = "wrong"
            }
            hours += hourEnd - hourBegin
        }
        return hours
    }

    function onEditableSave(field, row, rowIndex, oldValue, $el) {
        let hours = getHours(row)
        //alert("字段名：" + field + "，row：" + JSON.stringify(row) + "，旧值：" + JSON.stringify(oldValue) + ", rowIndex: " + rowIndex + ", el: " + JSON.stringify($el));
        $("#gridTable").bootstrapTable("updateCell", { index: rowIndex, field: "TotalHours", value: hours });
    }

