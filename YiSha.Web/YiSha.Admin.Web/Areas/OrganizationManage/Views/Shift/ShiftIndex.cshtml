        laydate.render({ elem: '#periodBegin', format: 'yyyy-MM-dd', done: adjustBeginDate });
        laydate.render({ elem: '#periodEnd', format: 'yyyy-MM-dd', done: adjustEndDate });

        let whichDay = new Date().getUTCDay()
        if (whichDay == 0) {
            whichDay = 7
        }
        let beginDate = new Date()
        beginDate.setDate(beginDate.getDate() - whichDay + 1)
        let endD = new Date(beginDate)
        endD.setDate(endD.getDate() + 6)
        $('#periodBegin').val(beginDate.toISOString().slice(0, 10))
        $('#periodEnd').val(endD.toISOString().slice(0, 10))
        initGrid();
        initTree();
        $('body').layout({ west__size: 185 });

        $('#btnExpand').click(function () {
            var tree = $.fn.zTree.getZTreeObj("departmentTree");
            tree.expandAll(true);
            $(this).hide();
            $('#btnCollapse').show();
        });

        $('#btnCollapse').click(function () {
            var tree = $.fn.zTree.getZTreeObj("departmentTree");
            tree.expandAll(false);
            $(this).hide();
            $('#btnExpand').show();
        });

