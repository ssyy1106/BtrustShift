    function initTree() {
        try {
            $('#departmentTree').ysTree({
                url: '@Url.Content("~/OrganizationManage/Department/GetDepartmentTreeListJson")',
                async: true,
                expandLevel: 2,
                maxHeight: "700px",
                callback: {
                    onClick: function (event, treeId, treeNode) {
                        $("#departmentId").val(treeNode.id);
                        searchGrid();
                    }
                }
            });
        } catch (err) {
            alert(err)
        }
       
    }

    function adjustBeginDate(value, date, endDate) {
        let whichDay = new Date(value).getUTCDay()
        let beginDate = new Date(value)
        beginDate.setDate(beginDate.getDate() - whichDay)
        let endD = new Date(beginDate)
        endD.setDate(endD.getDate() + 6)
        $('#periodBegin').val(beginDate.toISOString().slice(0, 10))
        $('#periodEnd').val(endD.toISOString().slice(0, 10))
    }

    function adjustEndDate(value, date, endDate) {
        let whichDay = new Date(value).getUTCDay()
        let endD = new Date(value)
        endD.setDate(endD.getDate() + 6 - whichDay)
        let beginDate = new Date(endD)
        beginDate.setDate(beginDate.getDate() - 6)
        $('#periodBegin').val(beginDate.toISOString().slice(0, 10))
        $('#periodEnd').val(endD.toISOString().slice(0, 10))
    }

